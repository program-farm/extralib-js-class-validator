{
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": "./",
    "module": "CommonJS",
    "declaration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "importHelpers": true,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "target": "ES6",
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": false,
    "lib": [
      "ES7"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "../node_modules",
    "./**/*.spec.ts"
  ],
  "include": [
    "*.ts",
    "**/*.ts"
  ]
}